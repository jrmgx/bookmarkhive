<twig:Turbo:Frame id="tag_edit_frame">
    <div class="modal fade" id="tag_edit_modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen-sm-down">
            <div class="modal-content">

    {{ form_start(form) }}
    <div class="modal-header">
        <h1 class="modal-title fs-5">Edit {{ tag.name }}</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        {{ form_row(form.name) }}
        {{ form_row(form.pinned, {label: 'Favorite'}) }}
        {{ form_row(form.layout, {label: 'Page Layout'}) }}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    {{ form_end(form) }}
            </div>
        </div>
    </div>
    <script>
        {% if turboFullRefresh|default(false) %}
        document.location = '{{ turboFullRefresh }}';
        {% else %}
        (function() { new bootstrap.Modal(document.getElementById('tag_edit_modal'), {}).show(); })();
        {% endif %}
    </script>
</twig:Turbo:Frame>
