<twig:Turbo:Frame id="bookmark_edit_frame">
    {% set imageStyle %}
        {% if bookmark.mainImage is defined and bookmark.mainImage.contentUrl is defined %}
            background-image: url({{ bookmark.mainImage.contentUrl }});
        {% endif %}
    {% endset %}
    {% set modal_id = 'bookmark-tag-edit-' ~ bookmark.id %}

    {{ form_start(form) }}
    <div class="card">
        <div class="card-img-top bookmark-img flex-shrink-0" style="{{ imageStyle }}"></div>
        <div class="card-body">
            <div class="card-title">
                {{ bookmark.title }}
            </div>
            <div class="pt-2">
                {{ form_row(form.tags) }}
            </div>
        </div>
        <div class="card-footer modal-footer text-body-secondary d-flex align-items-center">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
    {{ form_end(form) }}

    <script>(function() { new bootstrap.Modal(document.getElementById('bookmark_edit_modal'), {}).show(); })();</script>
</twig:Turbo:Frame>
